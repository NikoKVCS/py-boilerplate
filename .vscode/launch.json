{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
      }
    },
    {
      "name": "Debug Python File (Advanced)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "stopOnEntry": false,
      "args": [],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src:${env:PYTHONPATH}"
      }
    }
  ]
}
